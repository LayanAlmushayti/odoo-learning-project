<odoo>
<!-- tree view -->
    <record id="tag_view_tree" model="ir.ui.view">
        <field name="name">tag tree</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree > <!-- Allows the user to edit, create, and delete records directly from the Tree View , 0 if not allowed -->

                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="tag_view_form" model="ir.ui.view">
        <field name="name">tag form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form > <!-- These permissions (create, edit, delete) can be controlled not only from CSV files but also directly at the view level -->
                <sheet>
                    <div class='oe_title'>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group >
                            
                            
                        </group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="tag_action" model= "ir.actions.act_window">
        <field name="name">tag</field>
        <field name="res_model">tag</field> <!-- the name from the python file -->
    </record>
    <menuitem 
        id= "tag_menu_item"
        name= "tags"
        parent= "configuration_menu"
        action= "tag_action"
    />
</odoo>