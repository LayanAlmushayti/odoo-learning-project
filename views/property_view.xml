<odoo>
<!-- tree view -->
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="garden_area"/>
                <field name="bedrooms" optional='1'/>
                <field name="garage"  optional='1'/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <div class='oe_title'>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="general info.">
                            <field name="date_availability"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="bedrooms" />
                            <field name="living_area" />
                            <field name="facades" />
                            
                            
                        </group>
                        <group string="aditional info.">
                            <field name="garden_area"/>
                            <field name="bedrooms" />
                            <field name="garage" />
                            <field name="garden" />
                            <field name="garden_orientation" />
                        </group>
                        <group>
                            <field name="description" required='1'/> <!-- XML 'required' checks only in the UI, while Python 'required' enforces it in the model/database -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


<!-- search view -->
    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name = "postcode"/>
                <field name = "name"/>

                <!-- Filter records where the 'garden' field is True -->
                <filter name= "is_garden" string= "with garden" domain= "[('garden' ,'=' ,True)]"/> <!-- domain: only show records where the 'garden' field is True -->

                <!-- Group the records by the 'garden' field -->
                <filter name="group_garden" string= "Gerden" context= "{'group_by':'garden' }"/>
            </search>
        </field>
    </record>


    <record id="property_action" model= "ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">property</field> <!-- the name from the python file -->
    </record>
    <menuitem 
        id= "property_menu_item"
        name= "Properties"
        parent= "properties_menu"
        action= "property_action"
    />
</odoo>