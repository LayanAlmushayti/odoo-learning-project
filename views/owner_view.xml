<odoo>
<!-- tree view -->
    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">owner tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree > <!-- Allows the user to edit, create, and delete records directly from the Tree View , 0 if not allowed -->

                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">owner form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form > <!-- These permissions (create, edit, delete) can be controlled not only from CSV files but also directly at the view level -->
                <sheet>
                    <div class='oe_title'>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group >
                            <field name="phone"/>
                            <field name="address"/>
                            
                            
                        </group>
                        <group>
                            <field name="property_ids" widget= "many2many_tags"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="owner_action" model= "ir.actions.act_window">
        <field name="name">owner</field>
        <field name="res_model">owner</field> <!-- the name from the python file -->
    </record>
    <menuitem 
        id= "owner_menu_item"
        name= "Owners"
        parent= "configuration_menu"
        action= "owner_action"
    />
</odoo>